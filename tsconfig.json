{
  "compilerOptions": {
    "module": "CommonJS",
    "lib": ["es2017"],
    "target": "es5",
    "removeComments": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "types": ["node", "@wdio/sync", "@wdio/cucumber-framework"]
  },
  "include": ["./**/*"]
}
